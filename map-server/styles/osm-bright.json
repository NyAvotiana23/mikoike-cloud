{
  "version": 8,
  "name": "OSM Bright",
  "metadata": {
    "mapbox:autocomposite": false
  },
  "center": [47.5236, -18.8792],
  "zoom": 12,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "antananarivo": {
      "type": "vector",
      "url": "mbtiles://antananarivo"
    }
  },
  "sprite": "",
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#a0cfdf",
        "fill-outline-color": "#a0cfdf"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "landuse",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["park", "#d8e8c8"],
            ["residential", "#e0dfdf"],
            ["industrial", "#dfd5d6"]
          ]
        }
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "antananarivo",
      "source-layer": "building",
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-outline-color": "#bfbfbf"
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "antananarivo",
      "source-layer": "transportation",
      "filter": ["==", "$type", "LineString"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": {
          "base": 1.4,
          "stops": [[6, 0.5], [20, 30]]
        }
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Regular"],
        "text-size": 12,
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-label",
      "type": "symbol",
      "source": "antananarivo",
      "source-layer": "place",
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Bold"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}